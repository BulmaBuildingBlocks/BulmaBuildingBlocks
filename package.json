{
  "name": "mycharity-client",
  "version": "0.4.0",
  "description": "A website to provide the ability to donate to multiple charities at once",
  "homepage": "https://github.com/JosephAnson/mycharityapp",
  "bugs": {
    "url": "https://github.com/JosephAnson/mycharityapp/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JosephAnson/mycharityapp.git"
  },
  "engines": {
    "node": "10.16.1"
  },
  "author": "Joseph Anson & Joseph Cox",
  "private": true,
  "keywords": [
    "bulma",
    "vue",
    "vuejs",
    "vue-bulma",
    "components"
  ],
  "peerDependencies": {
    "vue": "^2.5.18"
  },
  "scripts": {
    "build": "nuxt-ts build",
    "ci": "concurrently \"yarn run lint\" \"yarn run test:coverage -- --runInBand\"",
    "clean": "rimraf ./dist ./coverage ./shared/**/*.js .nuxt",
    "dev": "nuxt-ts",
    "e2e": "cypress run --browser chrome",
    "e2e:headless": "cypress run",
    "extract-i18n-messages": "tsc ./shared/extract-i18n-messages.ts --esModuleInterop --resolveJsonModule && node ./shared/extract-i18n-messages.js",
    "format": "prettier --check **/*.{vue,ts,scss,json} --ignore-path .gitignore --write",
    "generate": "nuxt-ts generate",
    "generate-types": "yarn run apollo:downloadschema && yarn run apollo:generate-query-types && yarn run codegen:generate-types",
    "lint": "eslint --ext .vue,.ts --ignore-path .gitignore . --fix",
    "lint-watch": "esw --ext .vue,.ts --ignore-path .gitignore . --fix --watch",
    "postci": "codecov",
    "precommit": "concurrently \"yarn run lint\"",
    "predev": "yarn run clean",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m \"chore: update changelog\" && yarn version major",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m \"chore: update changelog\" && yarn version minor",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m \"chore: update changelog\" && yarn version patch",
    "start": "nuxt-ts start",
    "stylelint": "npx stylelint ./assets/styles/**/*.scss --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:update": "cross-env NODE_ENV=test jest --u",
    "test:watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run precommit"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@nuxt/typescript-runtime": "^0.3.9",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "bulma": "0.8.0",
    "core-js": "2.6.11",
    "vue-highlightjs": "^1.3.3",
    "nuxt": "^2.11.0",
    "nuxt-buefy": "^0.3.24",
    "nuxt-clipboard2": "^0.2.1",
    "nuxt-i18n": "^6.6.0",
    "raw-loader": "^4.0.0",
    "redirect-ssl": "^1.4.1",
    "require-context": "^1.1.0",
    "vue-progressbar": "^0.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nuxt/typescript-build": "^0.5.6",
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@nuxtjs/module-test-utils": "^1.5.0",
    "@nuxtjs/stylelint-module": "^3.2.1",
    "@types/clipboard": "^2.0.1",
    "@types/cookie": "^0.3.3",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.1",
    "@types/lodash": "^4.14.149",
    "@types/prettier": "^1.19.0",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-plugin-wildcard": "^6.0.0",
    "codecov": "3.6.5",
    "concurrently": "3.6.0",
    "cross-env": "^7.0.0",
    "cypress": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": "^0.5.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-watch": "^6.0.1",
    "generate-changelog": "^1.8.0",
    "glob": "7.1.2",
    "html-loader": "^0.5.5",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^10.0.6",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.1",
    "nuxt-property-decorator": "^2.5.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.14.2",
    "ts-jest": "^25.2.1",
    "vue-eslint-parser": "^7.0.0",
    "vue-jest": "^3.0.5",
    "vue-property-decorator": "^8.4.0",
    "vuex-module-decorators": "^0.16.1"
  }
}
